		"typescript": "^5.1.6",
		"vitest": "^0.34.2",
		"xo": "^0.56.0"
	},
	"peerDependencies": {
		"next": "^13.0.0",
		"react": "^18.0.0"
	},
	"sideEffects": false,
	"xo": {
		"extends": [
			"xo-react",
			"xo-typescript"
		],
		"overrides": [
			{
				"files": "test/index.test.ts",
				"extends": "plugin:testing-library/react",
				"rules": {
					"@typescript-eslint/no-floating-promises": "off",
					"@typescript-eslint/no-unsafe-return": "off",
					"@typescript-eslint/no-unsafe-call": "off"
				}
			}
		]
