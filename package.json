{
	"name": "@fatgy/use-navigation-lock",
	"version": "1.0.2",
	"description": "Navigation lock for next.js",
	"license": "MIT",
	"repository": "fatgy/use-navigation-lock",
	"author": {
		"name": "Shatmongkol Amaraveja",
		"email": "fatgygy@gmail.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.js",
	"exports": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"engines": {
